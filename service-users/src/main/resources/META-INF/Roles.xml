<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fi.nls.oskari.domain.Role">

    <resultMap id="RolesResult" type="Role">
        <result property="id" column="id" />
        <result property="name" column="name" />
    </resultMap>

    <select id="findAll" resultMap="RolesResult">
        select id, name from oskari_roles
    </select>

    <select id="findGuestRoles" resultMap="RolesResult">
        select id, name from oskari_roles where is_guest is true;
    </select>

    <select id="findByUserName" parameterType="String" resultMap="RolesResult">
        select
            r.id, r.name
        from
            oskari_roles r,
            oskari_users u,
            oskari_role_oskari_user m
        where
            r.id = m.role_id
            and u.id = m.user_id
            and u.user_name = #id#
    </select>

    <select id="findByUserId" parameterType="long" resultMap="RolesResult">
        select
            r.id, r.name
        from
            oskari_roles r,
            oskari_role_oskari_user m
        where
            r.id = m.role_id
            and m.user_id = #id#
    </select>

    <insert id="linkRoleToUser" parameterType="java.util.HashMap">
        INSERT INTO oskari_role_oskari_user (
        role_id,
        user_id
        )
        VALUES (
        #role_id#,
        #user_id#
        )
    </insert>

    <insert id="insert" parameterType="fi.nls.oskari.domain.Role">
        INSERT INTO oskari_roles (
        name
        )
        VALUES (
        #name#
        )
    </insert>
    
    <select id="maxId" parameterType="int">
        select
            MAX(id)
        from
            oskari_roles
    </select>
    
    <delete id="delete" parameterType="long">
        DELETE FROM oskari_roles        
        WHERE id = #id#
    </delete>
    
    <delete id="deleteUsersRoles" parameterType="long">
        DELETE FROM oskari_role_oskari_user        
        WHERE user_id = #id#
    </delete>
    

    <select id="findExternalRolesOfType" parameterType="String" resultType="java.util.HashMap">
        select r.id as id, r.name as name, m.name as ext
        from oskari_roles r, oskari_role_external_mapping m
        where m.roleid = r.id AND m.external_type=#type#
    </select>
</mapper>